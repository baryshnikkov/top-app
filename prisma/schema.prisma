generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  username     String
  phone        String  @unique
  email        String  @unique
  password     String
  isConfirmed  Boolean
  authCode     String
}
